generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             Int        @id @default(autoincrement())
  fullname       String     @db.VarChar(255)
  email          String     @unique @db.VarChar(255)
  username       String     @db.VarChar(255)
  password       String     @db.VarChar(255)
  bio            String?    @db.Text
  image          String?    @db.VarChar(255)
  imageId        String?    @db.VarChar(255)
  followingCount Int        @default(0) @db.Integer
  followerCount  Int        @default(0) @db.Integer
  postCount      Int        @default(0) @db.Integer
  createAt       DateTime   @default(now())
  posts          Post[]
  comments       Comment[]
  bookmarks      Bookmark[]
}

model Post {
  id           Int        @id @default(autoincrement())
  userId       Int
  user         User       @relation(fields: [userId], references: [id])
  image        String?    @db.VarChar(255)
  imageId      String?    @db.VarChar(255)
  caption      String?    @db.Text
  commentCount Int        @default(0) @db.Integer
  likeCount    Int        @default(0) @db.Integer
  createAt     DateTime   @default(now())
  comments     Comment[]
  bookmarks    Bookmark[]
}

model Comment {
  id       Int      @id @default(autoincrement())
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
  postId   Int
  post     Post     @relation(fields: [postId], references: [id])
  content  String   @db.Text
  createAt DateTime @default(now())
}

model Bookmark {
  userId   Int
  user     User     @relation(fields: [userId], references: [id])
  postId   Int
  post     Post     @relation(fields: [postId], references: [id])
  createAt DateTime @default(now())

  @@id([userId, postId])
}
