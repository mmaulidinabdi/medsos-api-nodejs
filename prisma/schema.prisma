generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             Int        @id @default(autoincrement())
  fullname       String     @db.VarChar(255)
  email          String     @unique @db.VarChar(255)
  username       String     @unique @db.VarChar(255)
  password       String     @db.VarChar(255)
  bio            String?
  image          String?    @db.VarChar(255)
  imageId        String?    @db.VarChar(255)
  followingCount Int        @default(0)
  followerCount  Int        @default(0)
  postCount      Int        @default(0)
  createAt       DateTime   @default(now())
  bookmarks      Bookmark[]
  comments       Comment[]
  followers      Follow[]   @relation("follower_relation")
  followings     Follow[]   @relation("following_relation")
  posts          Post[]
}

model Post {
  id           Int        @id @default(autoincrement())
  userId       Int
  image        String?    @db.VarChar(255)
  imageId      String?    @db.VarChar(255)
  caption      String?
  commentCount Int        @default(0)
  likeCount    Int        @default(0)
  createAt     DateTime   @default(now())
  bookmarks    Bookmark[]
  comments     Comment[]
  user         User       @relation(fields: [userId], references: [id])
}

model Comment {
  id       Int      @id @default(autoincrement())
  userId   Int
  postId   Int
  content  String
  createAt DateTime @default(now())
  post     Post     @relation(fields: [postId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}

model Bookmark {
  userId   Int
  postId   Int
  createAt DateTime @default(now())
  post     Post     @relation(fields: [postId], references: [id])
  user     User     @relation(fields: [userId], references: [id])

  @@id([userId, postId])
}

model Follow {
  followerId  Int
  followingId Int
  createAt    DateTime @default(now())
  follower    User     @relation("follower_relation", fields: [followerId], references: [id])
  following   User     @relation("following_relation", fields: [followingId], references: [id])

  @@id([followerId, followingId])
}
